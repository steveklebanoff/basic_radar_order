{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": ["es2017", "dom"],
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "noImplicitReturns": true,
        "pretty": true,
        "skipLibCheck": true,
        "typeRoots": ["node_modules/@types", "node_modules/@0x/typescript-typings/types"],
        "strict": true,
        // These settings are required for TypeScript project references
        "sourceMap": true,
        "outDir": "lib",
        "rootDir": ".",
        "strictPropertyInitialization": false
    },
    "include": ["./src/**/*", "./test/**/*"]
}
